generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  role          Role     @default(MEMBER)
  password_hash String
  birth         DateTime
  created_at    DateTime @default(now())
  amount        Decimal  @default(0) @db.Decimal(9, 2)

  SnackBar SnackBar[]

  @@map("users")
}

model SnackBar {
  id            String  @id @default(uuid())
  name          String
  description   String?
  addressStreet String
  addressNumber String
  addressCity   String

  Product Product[]
  owner   User      @relation(fields: [user_id], references: [id])
  user_id String

  status Status @default(UNCHECKED)

  @@map("snackBars")
}

model Product {
  id          String   @id @default(uuid())
  title       String
  description String?
  price       Decimal
  created_at  DateTime @default(now())
  snackBar_id String

  snackBar SnackBar @relation(fields: [snackBar_id], references: [id])

  @@map("products")
}

enum Role {
  ADMIN
  MEMBER
}

enum Status {
  CHECKED
  UNCHECKED
}
